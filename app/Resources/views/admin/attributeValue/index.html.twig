{% extends 'default/admin.html.twig' %}

{% block title %}
    Symfony Shop
{% endblock %}

{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="../../css/styles.css"/>
    <link type="text/css" rel="stylesheet" href="../../css/bootstrap.css"/>
{% endblock %}

{% block menu %}
{% endblock %}

{% block header %}
    Users
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-3">
            <div class="metrics text-muted" href="#map1">
                <h2>
                    <a href="/new">
                        Add Attribute Value
                    </a>
                </h2>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="metrics text-muted" href="#map1">
                <h2>
                    <a href="/new">
                        Delete ALL Values
                    </a>
                </h2>
            </div>
        </div>
    </div>
    <hr>

    <div class="row">
        {% for attributeValue in attributeValues %}
            <div class="col-sm-3">
                <div class="metrics text-muted" href="#map1">
                    <h2>
                        <a href="{{ path('b_pashkevich_catalog_admin_attributeValue_edit', { 'id': attributeValue.id }) }}">
                            Value: {{ attributeValue.value }}
                            <br>
                            Attribute: {{ attributeValue.attributeName }}
                        </a>
                    </h2>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
