{% extends 'default/admin.html.twig' %}

{% block title %}
    Symfony Shop
{% endblock %}

{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="../../css/styles.css"/>
    <link type="text/css" rel="stylesheet" href="../../css/bootstrap.css"/>
{% endblock %}

{% block menu %}
{% endblock %}

{% block header %}
    Categories
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-3">
            <div class="metrics text-muted" href="#map1">
                <h2>
                    <a href="/new">
                        Add Category
                    </a>
                </h2>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="metrics text-muted" href="#map1">
                <h2>
                    <a href="/deleteALL">
                        Delete ALL Categories
                    </a>
                </h2>
            </div>
        </div>
    </div>
    <hr>

    <div class="row">
        {% for category in categories %}
            <div class="col-sm-3">
                <div class="metrics text-muted">
                    <h2>
                        <a href="{{ path('b_pashkevich_catalog_admin_category_edit', { 'id': category.id }) }}">
                            {{ category['name'] }}
                        </a>
                    </h2>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
