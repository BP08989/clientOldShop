{% extends 'default/admin.html.twig' %}

{% block title %}
    Symfony Shop
{% endblock %}

{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="../../css/styles.css"/>
    <link type="text/css" rel="stylesheet" href="../../css/bootstrap.css"/>
{% endblock %}

{% block menu %}
{% endblock %}

{% block header %}
    Configurable Product
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-3">
            <div class="metrics text-muted" href="#map1">
                <form method="post" action="/admin/configurableProduct/save">
                    {% for requireAttribute in requireAttributes %}
                        <label for="{{ requireAttribute.name }}" style="min-width: 120px;  margin-left: -10px;">{{ requireAttribute.name }}</label>

                        {% for item in data %}
                            {% if item.name == requireAttribute.name %}
                        <input type="text" name="{{ requireAttribute.id }}" id="{{ requireAttribute.name }}" style=" max-width: 350px;" value="{{ item.value }}"> <br>
                    {% endif %}
                            {% endfor %}
                    {% endfor %}

                    <label for="image" style="min-width: 120px;  margin-left: -10px;">Image</label>
                    <input type="text" name="image" id="image" style=" max-width: 350px;"> <br>

                    <p><select size="1" name="category">
                            {% for category in categories %}
                                <option value="{{ category.id }}">{{ category.name }}</option>
                            {% endfor %}
                        </select></p>

                    {% for notRequireAttribute in notRequireAttributes %}
                        <input type="checkbox" name="{{ notRequireAttribute.id }}" id="{{ notRequireAttribute.name }}">
                        {{ notRequireAttribute.name }}<br>
                    {% endfor %}

                    <button class="shopping-cart" type="submit" style="width: 330px;">Save</button>
                </form>

                <button class="shopping-cart" href="/admin/configurableProduct/delete" style="width: 330px;">Delete</button>
            </div>
        </div>
        <div class="col-sm-3">
        </div>
    </div>
{% endblock %}
