{% extends 'default/admin.html.twig' %}

{% block title %}
    Symfony Shop
{% endblock %}

{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="../../css/styles.css"/>
    <link type="text/css" rel="stylesheet" href="../../css/bootstrap.css"/>
{% endblock %}

{% block menu %}
{% endblock %}

{% block header %}
    Configurable Products
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-3">
            <div class="metrics text-muted" href="#map1">
                <h2>
                    <a href="/new">
                        Add Config Product
                    </a>
                </h2>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="metrics text-muted" href="#map1">
                <h2>
                    <a href="/deleteALL">
                        Delete ALL Products
                    </a>
                </h2>
            </div>
        </div>
    </div>
    <hr>

    <div class="row">
        {% for product in products %}
            <div class="col-sm-3">
                <div class="metrics text-muted" href="#map1">
                    <h2>{{ product.name }}</h2>
                    <a href="{{ path('b_pashkevich_catalog_admin_configurableProduct_edit', { 'id': product.id }) }}">
                        <img src="{{ product.img }}" alt="img" style="width: 220px; height: 220px;">
                    </a><br>
                    <div class="description">
                        {{ product.shortDescription }}<br>
                        {{ product.price }} $
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
