{% extends 'default/admin.html.twig' %}

{% block title %}
    Symfony Shop
{% endblock %}

{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="../../css/styles.css"/>
    <link type="text/css" rel="stylesheet" href="../../css/bootstrap.css"/>
{% endblock %}

{% block menu %}
{% endblock %}

{% block header %}
    User
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-sm-3">
        </div>
            <div class="col-sm-3">
                <div class="metrics text-muted" href="#map1">
                    <form method="post" action="/admin/user/save">
                        <label for="name">Name: </label>
                        <input type="text" id="name" class="form-control" name="name" value="{{ user.name }}">

                        <label for="email">Email: </label>
                        <input type="email" id="email" class="form-control" name="email" value="{{ user.email }}">

                        <label for="number">Phone Number: </label>
                        <input type="text" id="number" class="form-control" name="number" value="{{ user.number }}">

                        <label for="password">Password: </label>
                        <input type="password" id="password" class="form-control" name="search">

                        <select size="1" name="role" id="role">
                            <option value="user">user</option>
                            <option value="admin">admin</option>
                        </select>

                        <button class="shopping-cart" type="submit" style="width: 330px;">Save</button>
                    </form>
                </div>
            </div>
        <div class="col-sm-3">
        </div>
    </div>
{% endblock %}
